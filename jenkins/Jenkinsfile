pipeline {
    agent any
     tools {
        jdk 'OpenJDK-17'     
        maven 'Maven-3.9.6'   
    }
    environment {
        // Load from .env dynamically
        ENV_FILE = '../.env'
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        
    stages {
        stage('Load Environment Variables') {
            steps {
                script {
                    def envContent = readFile(env.ENV_FILE)
                    envContent.split("\n").each { line ->
                        if (line && line.contains("=") && !line.startsWith("#")) {
                            def (key, value) = line.trim().split("=")
                            env."${key}" = value
                        }
                    }
                }
            }
        }
        stage('Print Env') {
          steps {
            echo "JFrog URL: ${env.JFROG_URL}"
          }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    // Archive test result files for download
                    archiveArtifacts artifacts: 'target/surefire-reports/*.xml', fingerprint: true
                }
            }
        }
        stage('Deliver') { 
            steps {
                sh './jenkins/scripts/deliver.sh' 
            }
        }
    }
}
